<h1 class="my-2">Attendance Index</h1>

<p>
  <%= link_to 'Add new attendance', new_attendance_path, class: 'btn btn-primary m-3' %>
</p>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Employee ID</th>
      <th scope="col">Check-in</th>
      <th scope="col">Check-out</th>
      <th scope="col">Store ID</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @attendances.each do |attendance| %>
        <th scope="row"><%= attendance.employee_id %></th>
        <td><%= attendance.check_in %></td>
        <td><%= attendance.check_out %></td>
        <td><%= attendance.store_id %></td>
        <td><%= link_to 'Show', attendance_path(attendance.id), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_attendance_path(attendance.id), class: 'btn btn-success' %></td>
        <td><%= link_to 'Delete', attendance_path(attendance), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
    </tr>
    <% end %>
  </tbody>
</table>
